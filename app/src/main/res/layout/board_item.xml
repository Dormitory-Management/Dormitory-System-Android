<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/list_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#736c65"
            android:gravity="center"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_room_number"
                android:layout_width="0px"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#a2a2a2"
                android:gravity="center"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/item_person"
                android:layout_width="0px"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/list_view_margin"
                android:layout_marginRight="@dimen/list_view_margin"
                android:layout_weight="1"
                android:background="#a2a2a2"
                android:gravity="center"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="0px"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#a2a2a2"
                android:gravity="center"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>